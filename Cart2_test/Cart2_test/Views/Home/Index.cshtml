
@model List<Cart2_test.Models.Product>

@{
    ViewBag.Title = "購物首頁";

}

<style>
    .ProductImg {
        height: 300px;
    }
</style>

<div class="jumbotron">
    <h2>IT鐵人購物網站 - 甚麼都沒有，甚麼都沒賣。</h2>
    <h6><span></span> @Html.ActionLink("關於網站", "About", new { }, new { @class = "btn btn-primary btn-lg" }) </h6>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="ProductImg" src="@product.ImageUrl" alt="商品圖片">
                <div class="caption">
                    <h3>@product.Name</h3>
                    <p>
                        售價: @product.Price.ToString("0.0")
                    </p>
                    <p>
                        @* href="javascript:void(0);" 死連結，僅執行 onclick *@
                        <a onclick="AddToCart('@product.Id')" href="javascript:void(0);"
                           class="btn btn-primary" role="button">
                            加入購物車
                        </a>
                        <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-default" role="button">
                            詳細資訊
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>