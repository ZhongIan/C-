    {
        @Html.ValidationSummary(true, (string)ViewBag.ResultMessage, new { @class = "text-danger" })
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
